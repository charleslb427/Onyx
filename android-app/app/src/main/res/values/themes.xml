<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Onyx" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        
        <!-- Status Bar: White with Black icons -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar: White with Black icons (Seamless bottom) -->
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <item name="android:windowBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        
        <!-- UI Controls color (Switches, Checkboxes) -->
        <item name="colorControlActivated">@color/secondary</item> <!-- Instaram Blue -->
        
        <!-- Preference theme -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
</resources>
